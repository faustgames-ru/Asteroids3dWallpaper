<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="faustgames" parent="android:Theme.Black">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/faustgamesButtonTheme</item>
        <item name="android:textViewStyle">@style/faustgamesTextViewTheme</item>
        <item name="android:seekBarStyle">@style/faustgamesSeekBarTheme</item>
        <item name="android:checkboxStyle">@style/faustgamesCheckBox</item>
    </style>
    <style name="faustgamesSeekBarTheme" parent="SeekBarAppTheme"/>
    <style name="faustgamesSeekBarColorTheme" parent="SeekBarColorAppTheme"/>

    <style name="faustgamesTextViewTheme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="faustgamesCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="faustgamesSettingsPanelTheme">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/settings_panel</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="faustgamesButtonTheme" parent="android:Widget.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="faustgamesButtonRedTheme" parent="android:Widget.Button">
        <item name="android:textColor">@color/button_red_text</item>
        <item name="android:background">@drawable/button_red</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>